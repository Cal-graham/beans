{% extends "base.html"  %}

{% block content %}


<body>
  <div class="box">
  <button class="button is-info" onclick="submit();"></button>
  <canvas id="chartJSContainer"></canvas>
  </div>
  <script>

function submit(){
	$.get(
   	 url="submit_custom_profile",
   	 data={'custom_profile_data':scatterChart.data.datasets[0].data}, 
   	 success=function(data) {
   	    console.log(data);
	    console.log(scatterChart.data.datasets[0].data);
    	}
	);
}

function grab_scatter_data(chart){
	const x = []
	const y = []
	for (const index in scatterChart.data.datasets[0].data){
		x.push()
		y.push()
	}
}

var ctx = document.getElementById('chartJSContainer').getContext('2d');
     
var scatterChart = new Chart(ctx, {
    type: 'scatter',
    data: {
        datasets: [{
            label: 'Scatter Dataset',
            pointRadius: 10,
            showLine: true,
            data: [{
                x: 0,
                y: 1
            }, {
                x: 10,
                y: 4.5
            }, {
                x: 18,
                y: 6
            }, {
                x: 20,
                y: 7.5
            }, {
                x: 22,
                y: 9
            }, {
                x: 40,
                y: 7.5
            }, {
                x: 60,
                y: 4.5
            }]
        }]
    },
    options: {
    		dragData: true,
        dragX: true,
        scales: {
            xAxes: [{
                type: 'linear',
                position: 'bottom',
                ticks: {
                	max: 60,
                        min: 0
                }
            }],
            yAxes: [{
                ticks: {
                	max: 10,
                  min: 0
                }
            }]
        }
    }
});
  </script>
</body>

{% endblock %}
